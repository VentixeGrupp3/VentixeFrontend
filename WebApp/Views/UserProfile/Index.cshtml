@model ProfileInformationViewModel
@{
    ViewData["Title"] = "Profile Information";
    Layout = "_Layout";
}
<div class="userprofile-form-container">
    <div class="userprofile-form-header">
        <h2 class="userprofile-form-title">Update Profile</h2>
        <p class="userprofile-form-subtitle">Keep your information up to date</p>
    </div>

    <div class="userprofile-form-body">
        <form method="post" asp-action="UpdateProfile" asp-controller="UserProfile" novalidate>
            <!-- Personal Information -->
            <div class="userprofile-form-section">
                <h3 class="userprofile-form-section-title">Personal Information</h3>

                <div class="userprofile-form-row">
                    <div class="userprofile-form-group">
                        <label class="userprofile-form-label">First Name</label>
                        <input asp-for="FirstName" class="userprofile-form-input" placeholder="Enter your first name" required />
                        <span asp-validation-for="FirstName" class="userprofile-form-error-message"></span>
                    </div>

                    <div class="userprofile-form-group">
                        <label class="userprofile-form-label">Last Name</label>
                        <input asp-for="LastName" class="userprofile-form-input" placeholder="Enter your last name" required />
                        <span asp-validation-for="LastName" class="userprofile-form-error-message"></span>
                    </div>
                </div>

                <div class="userprofile-form-row">
                    <div class="userprofile-form-group userprofile-form-group-full">
                        <label class="userprofile-form-label">Phone Number</label>
                        <input asp-for="PhoneNumber" type="tel" class="userprofile-form-input" placeholder="Enter your phone number" />
                        <span asp-validation-for="PhoneNumber" class="userprofile-form-error-message"></span>
                    </div>
                </div>
            </div>

            <!-- Address Information -->
            <div class="userprofile-form-section">
                <h3 class="userprofile-form-section-title">Address Information</h3>

                <div class="userprofile-form-row">
                    <div class="userprofile-form-group userprofile-form-group-full">
                        <label class="userprofile-form-label">Street Address</label>
                        <input asp-for="StreetName" class="userprofile-form-input" placeholder="Enter your street address" />
                        <span asp-validation-for="StreetName" class="userprofile-form-error-message"></span>
                    </div>
                </div>

                <div class="userprofile-form-row">
                    <div class="userprofile-form-group">
                        <label class="userprofile-form-label">Postal Code</label>
                        <input asp-for="PostalCode" class="userprofile-form-input" placeholder="Enter postal code" />
                        <span asp-validation-for="PostalCode" class="userprofile-form-error-message"></span>
                    </div>

                    <div class="userprofile-form-group">
                        <label class="userprofile-form-label">City</label>
                        <input asp-for="City" class="userprofile-form-input" placeholder="Enter your city" />
                        <span asp-validation-for="City" class="userprofile-form-error-message"></span>
                    </div>
                </div>
            </div>

            <div class="userprofile-form-actions">
                <button type="button" class="userprofile-form-button-secondary">Cancel</button>
                <button type="submit" class="userprofile-form-button">Update Profile</button>
            </div>
        </form>
    </div>
</div>