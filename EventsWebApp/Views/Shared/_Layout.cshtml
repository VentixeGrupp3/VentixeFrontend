<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ventixe</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="icon" href="~/favicon.ico" />
</head>
<body>
    <div class="wrapper">
        <!-- Left sidebar will go here in the future -->
        <!-- Main Content Area -->
        <main class="content-area">
            <div class="breadcrumb-header">
                <div class="breadcrumbs">
                    <a href="/">Dashboard</a>
                    @if (ViewContext.RouteData.Values["controller"].ToString() != "Home")
                    {
                        <span>/</span>
                        <a href="@Url.Action("Index", ViewContext.RouteData.Values["controller"].ToString())">
                            @ViewContext.RouteData.Values["controller"].ToString()
                        </a>
                    }
                </div>

                <div class="user-info">
                    <span>Orlando Laurentius</span>
                    <span class="role">Admin</span>
                </div>
            </div>

            <!-- Alert Messages -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            <!-- Main Content -->
            @RenderBody()

            <!-- Footer -->
            <footer>
                <div>Copyright © 2025 Peterdraw</div>
                <div>
                    <a href="/privacy">Privacy Policy</a>
                    <a href="/terms">Terms and Conditions</a>
                    <a href="/contact">Contact</a>
                </div>
            </footer>
        </main>
    </div>

    <script src="~/js/site.js" defer></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>