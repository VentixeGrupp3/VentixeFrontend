@using EventsWebApp.Models.ViewModels
@model EventCardViewModel

<div class="event-card">
    <h3>@Model.EventName</h3>

    @if (!string.IsNullOrEmpty(Model.Description))
    {
        <p>@Model.Description</p>
    }

    @if (!string.IsNullOrEmpty(Model.EventCategory))
    {
        <p><strong>Category:</strong> @Model.EventCategory</p>
    }

    @if (Model.EventDate != default(DateTime))
    {
        <p><strong>Date:</strong> @Model.EventDate.ToString("MMM dd, yyyy")</p>
    }

    @if (!string.IsNullOrEmpty(Model.Location))
    {
        <p><strong>Location:</strong> @Model.Location</p>
    }

    <a href="@Url.Action("Details", "Events", new { id = Model.EventId })" class="btn btn-primary">
        View Details
    </a>
</div>